#ifndef PINDEFINES_H_
#define PINDEFINES_H_

/*
 * LEDs
 */
#define LED1_GPIO	GPIOC
#define LED1_PIN	GPIO_Pin_13
#define	LED2_GPIO	GPIOB
#define LED2_PIN	GPIO_Pin_2
#define LED3_GPIO	GPIOA
#define LED3_PIN	GPIO_Pin_10
#define LED4_GPIO	GPIOB
#define LED4_PIN	GPIO_Pin_5


#define RX3_GPIO	GPIOB
#define TX3_GPIO	GPIOB
#define RX3_PIN		GPIO_Pin_11
#define TX3_PIN		GPIO_Pin_10


#define MOTOR1_PWM1_GPIO	GPIOC
#define MOTOR1_PWM1_PIN	GPIO_Pin_6

#define MOTOR1_IN1B_GPIO 	GPIOC
#define MOTOR1_IN1B_PIN GPIO_Pin_7

#define MOTOR1_IN1A_GPIO	GPIOC
#define MOTOR1_IN1A_PIN	GPIO_Pin_10


#define MOTOR1_PWM2_GPIO	GPIOC
#define MOTOR1_PWM2_PIN	GPIO_Pin_9

#define MOTOR1_IN2A_GPIO 	GPIOC
#define MOTOR1_IN2A_PIN GPIO_Pin_8

#define MOTOR1_IN2B_GPIO	GPIOC
#define MOTOR1_IN2B_PIN	GPIO_Pin_5


#define MOTOR2_PWM4_GPIO	GPIOB
#define MOTOR2_PWM4_PIN	GPIO_Pin_9

#define MOTOR2_IN2A_GPIO GPIOB
#define MOTOR2_IN2A_PIN GPIO_Pin_8
#define MOTOR2_IN2B_GPIO GPIOB
#define MOTOR2_IN2B_PIN GPIO_Pin_1


#define MOTOR_STEPPER_CLK_GPIO GPIOC
#define MOTOR_STEPPER_CLK_PIN GPIO_Pin_13 //LED1
#define MOTOR_STEPPER_CW_GPIO GPIOB
#define MOTOR_STEPPER_CW_PIN GPIO_Pin_2 //LED2
#define MOTOR_STEPPER_EN_GPIO GPIOA
#define MOTOR_STEPPER_EN_PIN GPIO_Pin_10 //LED3


#define ADC_GPIO	GPIOC
#define ADC_BATTERY_PIN	GPIO_Pin_0

#define I2C2_GPIO	GPIOB
#define I2C2_SCL_PIN	GPIO_Pin_10
#define I2C2_SDA_PIN	GPIO_Pin_11

#endif
